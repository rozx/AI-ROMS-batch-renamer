{
  "name": "rom-batch-renamer",
  "module": "src/index.ts",
  "type": "module",
  "version": "1.6.4",
  "description": "A command line batch renamer for rom files",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --hot src/index.ts ",
    "build-mac-arm": "bun build --compile ./src/index.ts --outfile ./dist/RomBatchRenamer-Mac-Arm64-Modern --target bun-darwin-arm64-modern",
    "build-mac-x64": "bun build --compile ./src/index.ts --outfile ./dist/RomBatchRenamer-Win-X64-Baseline --target bun-darwin-x64-baseline",
    "build-win": "bun build --compile ./src/index.ts --outfile ./dist/RomBatchRenamer-Win-X64-Baseline --target bun-win-x64-baseline",
    "build-linux-x64": "bun build --compile ./src/index.ts --outfile ./dist/RomBatchRenamer-Linux-X64-Baseline --target bun-linux-x64-baseline",
    "build-linux-arm": "bun build --compile ./src/index.ts --outfile ./dist/RomBatchRenamer-Linux-ARM-Modern --target bun-linux-arm64-modern"
  },
  "trustedDependencies": [
    "chatgpt",
    "commander",
    "md5-file",
    "persistent-cache",
    "pinyin"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/commander": "^2.12.2",
    "@types/persistent-cache": "^1.1.3",
    "@types/pinyin": "^2.10.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chatgpt": "^5.2.5",
    "commander": "^12.1.0",
    "md5-file": "^5.0.0",
    "persistent-cache": "^1.1.2",
    "pinyin": "^4.0.0-alpha.2"
  }
}
