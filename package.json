{
  "name": "rom-batch-renamer",
  "module": "src/index.ts",
  "type": "module",
  "version": "1.3.1",
  "description": "A command line batch renamer for rom files",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --hot src/index.ts ",
    "build-mac": "bun build ./src/index.ts --compile --minify --outfile ./dist/RomBatchRenamer-Mac-Arm64-Modern --target bun-darwin-arm64-modern",
    "build-win": "bun build ./src/index.ts --compile --minify --outfile ./dist/RomBatchRenamer-Win-X64-Modern --target bun-win-x64-modern",
    "build-linux": "bun build ./src/index.ts --compile --minify --outfile ./dist/RomBatchRenamer-Linux-X64-Modern --target bun-linux-x64",
    "build-all": "bun build-mac && bun build-win && bun build-linux"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/commander": "^2.12.2",
    "@types/pinyin": "^2.10.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "pinyin": "^4.0.0-alpha.2"
  }
}